{
    "compilerOptions": {
        "target": "ES2017",
        "lib": [
            "ES2017",
            "DOM"
        ],
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "jsx": "react-jsx",
        "types": [
            "@figma/plugin-typings",
            "vite/client"
        ],
        "skipLibCheck": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*"
    ]
}