{
    "name": "figma-pdf-importer",
    "version": "1.0.0",
    "description": "Import PDFs into Figma as editable layers",
    "scripts": {
        "build": "npm run build:ui && npm run build:code",
        "build:ui": "vite build",
        "build:code": "esbuild src/plugin/controller.ts --bundle --outfile=dist/code.js --target=es2017 --platform=neutral",
        "dev": "npm run build -- --watch",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "nanoid": "^5.0.0",
        "pdfjs-dist": "^3.11.174",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@figma/plugin-typings": "^1.84.0",
        "@types/node": "^20.0.0",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "@vitejs/plugin-react": "^5.1.2",
        "typescript": "^5.2.0",
        "vite": "^5.0.0",
        "vite-plugin-singlefile": "^1.0.0"
    }
}